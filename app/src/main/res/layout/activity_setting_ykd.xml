<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    tools:context="${relativePackage}.${activityClass}" >

    <RelativeLayout
        android:id="@+id/top_hand_shezhi"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tx_shezhi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="设置"
            android:textColor="#ff0000"
            android:textSize="24dip" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/top_hand_shezhi"
        android:orientation="vertical" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="#c0c0c0" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dip"
            android:orientation="vertical" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="#c0c0c0" />

            <TextView
                android:id="@+id/shezhi_datakey"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:padding="8dp"
                android:text="    数据Key"
                android:textColor="#000"
                android:textSize="17sp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="#c0c0c0" />

            <TextView
                android:id="@+id/shezhi_paykey"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:padding="8dp"
                android:text="    交易Key"
                android:textColor="#000"
                android:textSize="17sp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="#c0c0c0" />

            <TextView
                android:id="@+id/shezhi_shh"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:padding="8dp"
                android:text="    商户号"
                android:textColor="#000"
                android:textSize="17sp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="#c0c0c0" />

            <TextView
                android:id="@+id/shezhi_fdm"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:padding="8dp"
                android:text="    分店名"
                android:textColor="#000"
                android:textSize="17sp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:layout_marginBottom="10dip"
                android:background="#c0c0c0" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="#c0c0c0" />

            <TextView
                android:id="@+id/xinbanben"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:drawableRight="@drawable/mm_submenu_normal"
                android:padding="8dp"
                android:text="    检查新版本"
                android:textColor="#000"
                android:textSize="17sp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:layout_marginBottom="10dip"
                android:background="#c0c0c0" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="#c0c0c0" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:layout_marginBottom="10dip"
                android:background="#c0c0c0" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="#c0c0c0" />

            <TextView
                android:id="@+id/guanyu"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:drawableRight="@drawable/mm_submenu_normal"
                android:padding="8dp"
                android:text="    关于我们"
                android:textColor="#000"
                android:textSize="17sp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:layout_marginBottom="10dip"
                android:background="#c0c0c0" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>